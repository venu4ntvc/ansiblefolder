---
- name: install tomcat
  get-url:
    url: https://dlcdn.apache.org/tomcat/tomcat-9/v9.0.65/bin/apache-tomcat-9.0.65.tar.gz
    dest: /home/ubuntu/apache-tomcat-9.0.65.tar.gz
    force_basic_auth: yes

- name: create a tomcat directory
  file:
   path: /opt/tomcat
   state: directory

- name:  i want extract tar file
  command: 
       cmd: sudo tar xzvf /home/ubuntu/apache-tomcat-9.0.65.tar.gz -C /opt/tomcat --strip-components=1
       creates: /opt/tomcat